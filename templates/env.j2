# XXX Customize for your project
# Odoo
ODOO_MAJOR={{ OE_VERSION.split('.')[-2] }}
ODOO_MINOR={{ OE_VERSION }}

# XXX Critical for security!!!
ODOO_ADMIN_PASSWORD={{ OE_SUPERADMIN }}
# XXX Get this with `htpasswd -nbB $DB_USER $ODOO_ADMIN_PASSWORD`
ODOO_ADMIN_PASSWORD_BCRYPT={{ PROXY_BCRYPT }}
ODOO_PROXY_MODE=true

# Domains
DOMAIN_TEST={{ OE_TEST_URL }}
DOMAIN_PROD={{ OE_URL }}

# Database
DB_VERSION=9.6
DB_USER=odoo
DB_PASSWORD=odoopassword

# Real SMTP relay
SMTP_REAL_MAILNAME={{ mailname }}
SMTP_REAL_RELAY_HOST={{ mailserver }}
SMTP_REAL_RELAY_PORT={{ smtpport }}
SMTP_REAL_RELAY_USER={{ smtpuser }}
SMTP_REAL_RELAY_PASS={{ smtppass }}
SMTP_REAL_CANONICAL_DOMAINS={{ mailname }}
SMTP_REAL_NON_CANONICAL_DEFAULT={{ mailname }}

# Fake IMAP/POP3 server
INBOX_FAKE_LISTEN=:995
INBOX_FAKE_TALK=localhost:995

# Real IMAP/POP3 server
INBOX_REAL_LISTEN=:995
INBOX_REAL_TALK={{ mailserver }}:995
